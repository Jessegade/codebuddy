.ui.attached.stackable.menu
      .ui.container
        img.logo.large(src='/images/logo-codebuddy-s.png')
        if (user)
          a.item(href='/dashboard')
            i.grid.layout.icon
            |  Dashboard
          a.item(href='/notifications')
            i.Alarm.icon
            |  Notifications
            .ui.red.circular.label 100
          .ui.simple.dropdown.right.item
              i.user.icon
              = `${user.info.firstname} ${user.info.lastname}`
              i.dropdown.icon
              .menu
                .item
                  i.info.icon
                  | Signed in as 
                  = user.username
                .ui.inverted.divider  
                a.item(href='/profile/'+user.username)
                  i.unhide.icon
                  |  Your Profile
                a.item(href='/settings/profile')
                  i.setting.icon
                  |  Setting Profile
                a.item(href='/signout')
                  i.sign.out.icon
                  |  Sign Out
        else
            a.item(href='/')
              i.home.icon
              |  Home
            a.item(href='/howitworked')
              i.info.icon
              |  How it worked ?
            a.item(href='/aboutus')
              i.users.icon
              |  About us
            a.right.item(href='/signin')
              i.sign.in.icon
              |  Sign in
            