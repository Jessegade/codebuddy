{
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ],
      "comma-dangle": ["error", "never"],
      "no-unused-vars": ["error", {
        "argsIgnorePattern": "next"
      }],
      "object-shorthand": [0, "never"]
    }
  }